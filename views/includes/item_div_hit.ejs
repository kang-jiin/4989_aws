<% for(let i = 0; i < 3; i++) { %>
    <% if(h_article.length == 0 || i >= h_article.length) { break; }%>
    <div class="col-lg-4 col-sm-6 portfolio-item">
        <div class="hovereffect">
            <img style="width: 100%; min-height: 200px; max-height: 200px" src="<%=h_article[i].savefolder%>/<%=h_article[i].savename%>" alt="">
            <div class="overlay">
                <a class="info" href="/item_info/<%= h_article[i].id %>">

                    <div>
                        <span>제목 : </span>
                        <span><%=h_article[i].title %></span>
                    </div>
                    <div>
                        <span>현재가격 : </span>
                        <span><%= h_article[i].price %></span>
                    </div>
                    <div>
                        <span> 종료시각 : </span>
                        <span><%= h_article[i].time %></span>
                    </div>
                </a>
            </div>
        </div>
    </div>
<% } %>